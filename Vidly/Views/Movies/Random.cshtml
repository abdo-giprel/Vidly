
@model IEnumerable<Vidly.Models.Movies>
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@* 
    here you can write
    any comments   
*@

@{
    var className = Model.ToList().Count==0? "fail" : "succeded";
}
<style>
    .fail {color: red;}
    .succeded{ color: green;}
</style>
<h2 class="@className">Movies</h2>
@if (Model.ToList().Count ==0)
{
    <text> there is no movie here</text>
}
else
{
    <table class="table border">
        <thead >

        <tr>
            <td class="font-weight-bold">Movie</td>
            <td class="font-weight-bold">Genre</td>
        </tr>
        </thead>
        <tbody >
        @foreach (var movie in Model.ToList())
        {
            <tr>
                <td >@Html.ActionLink(@movie.Name,"Details",new {id= movie.Id},null)</td>
                <td >@movie.Genres.name</td>
            </tr>
        }
        </tbody>
    </table>
}
