@model Vidly.Models.Movies
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genres.name</li>
    <li>Release Date: @Model.release_date.ToLongDateString()</li>
    <li>Data Added: @Model.dataAdded.ToLongDateString()</li>
    <li>Number in Stock: @Model.numberInStock</li>
</ul>
